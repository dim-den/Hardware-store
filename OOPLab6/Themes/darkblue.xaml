<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:OOPLab6">
    <Style x:Key="GridPrincipalTheme" TargetType="Grid">
        <Setter Property="Background" Value="#1f4068"/>
    </Style>
    <Style x:Key="MenuTheme" TargetType="Grid">
        <Setter Property="Background" Value="#162447"/>
    </Style>
    <Style x:Key="HeaderTheme" TargetType="Grid">
        <Setter Property="Background" Value="#1b1b2f"/>
    </Style>
    <Style x:Key="GridPrincipalThemeListBox" TargetType="ListBox">
        <Setter Property="Background" Value="#1f4068"/>
    </Style>
    <Style x:Key="HeaderThemeButton" TargetType="Button">
        <Setter Property="Background" Value="#1b1b2f"/>
    </Style>
    <Style x:Key="GrindPrincipalStackPanel" TargetType="StackPanel">
        <Setter Property="Background" Value="#1f4068"/>
    </Style>
    <Style x:Key="HeaderThemeBorder" TargetType="Border">
        <Setter Property="Background" Value="#1b1b2f"/>
    </Style>
    <Style x:Key="MenuThemeRectangle" TargetType="Rectangle">
        <Setter Property="Fill" Value="#162447"/>
    </Style>
    <Style x:Key="GridPrincipalWindow" TargetType="Window">
        <Setter Property="Background" Value="#1f4068"/>
    </Style>
    <Style x:Key="MenuThemeToggleButton" TargetType="ToggleButton">
        <Setter Property="Background" Value="#162447"/>
    </Style>
    <ControlTemplate x:Key="BuyButtonTemplate" TargetType="Button" >
        <Border Name="btn" CornerRadius="10" Style="{DynamicResource HeaderThemeBorder}" Margin="10">
            <ContentControl Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="32" Foreground="White" FontFamily="GOST type A" Content="{DynamicResource sc_Buy}" />
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <Setter Property="FontWeight" Value="Bold" />
            </Trigger>
            <Trigger Property="IsPressed" Value="true">
                <Setter TargetName="btn" Property="Background" Value="#5980ba" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
    <ControlTemplate x:Key="AddButtonTemplate" TargetType="Button" >
        <Border Name="btn" CornerRadius="10" Style="{DynamicResource HeaderThemeBorder}" Margin="10">
            <ContentControl Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center"  Foreground="White" FontSize="24" FontFamily="GOST type A" Content="{DynamicResource add_Add}" />
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <Setter Property="FontWeight" Value="Bold" />
            </Trigger>
            <Trigger Property="IsPressed" Value="true">
                <Setter TargetName="btn" Property="Background" Value="#5980ba" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
    <ControlTemplate x:Key="ApplyButtonTemplate" TargetType="Button" >
        <Border Name="btn" CornerRadius="10" Style="{DynamicResource HeaderThemeBorder}" Margin="5">
            <ContentControl Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center"  Foreground="White" FontFamily="GOST type A" Content="{DynamicResource srch_Apply}" />
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <Setter Property="FontWeight" Value="Bold" />
            </Trigger>
            <Trigger Property="IsPressed" Value="true">
                <Setter TargetName="btn" Property="Background" Value="#5980ba" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
</ResourceDictionary>