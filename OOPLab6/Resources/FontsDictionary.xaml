<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:OOPLab6.Resources">
    <Style TargetType="TextBlock" x:Key="TextBlockFont16" >
        <Setter Property="FontFamily" Value="GOST type A" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="HorizontalAlignment" Value="Left" />
    </Style>

    <Style TargetType="TextBlock" x:Key="TextBlockMainMenu" >
        <Setter Property="FontFamily" Value="GOST type A" />
        <Setter Property="FontSize" Value="26" />
        <Setter Property="Margin" Value="15"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="TextBlockAddWindow18">
        <Setter Property="TextBlock.FontFamily" Value="GOST type A" />
        <Setter Property="TextBlock.FontSize" Value="18" />
        <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
        <Setter Property="TextBlock.Margin" Value="10 10 10 0" />
        <Setter Property="TextBlock.Foreground" Value="Black" />
    </Style>
</ResourceDictionary>